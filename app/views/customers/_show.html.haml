%dl
  %dt= t(".name")
  %dd= @customer.name
%dl
  %dt= t(".mobile_number")
  %dd= phone_to @customer.mobile_number
%dl
  %dt= t(".email")
  %dd= mail_to @customer.email
%dl
  %dt= t(".address")
  %dd= @customer.address.humanize
.modal-actions
  = button_tag type: :button, class: "btn btn-secondary", data: {action: "click->remote-modal#hide"} do
    = external_svg_tag("svgs/cancel.svg")
    = button_text("cancel")
  - if policy(@customer).edit?
    = link_to edit_customer_path(@customer), class: "btn btn-secondary" do
      = external_svg_tag("svgs/pencil.svg")
      %span.d-block.d-lg-none= button_text("edit")
      %span.d-none.d-lg-block= button_text("edit_customer")
